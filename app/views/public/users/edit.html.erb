<h2>User info</h2>
  <%= form_with model: @user, ulr: user_path, local:true do |f| %>
    <% if @user.errors.any? %>
      <h5><%= pluralize(@user.errors.count, "error") %> prohibited this book from being saved:</h5>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
         <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
    <label for="inputName">Name</label>
    <%= f.text_field :name, autofocus: true %>
    
    <label for="inputImage">Image</label>
    <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
    
    <label for="inputIntroduction">Introduction</label>
    <%= f.text_area :introduction, id:"inputIntroduction" %>
    
    <div>
     <%= f.submit "Update User" %>
    </div>
  <% end %>