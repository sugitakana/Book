<h2>User info</h2>
<%= image_tag @user.get_profile_image(100,100) %>
<table>
  <tr>
    <th>name</th>
    <th><%= @user.name %></th>
  </tr>
  <tr>
    <th>introduction</th>
    <th><%= @user.biography %></th>
  </tr>
</table>
<%= link_to "編集", edit_user_path(@user) %>

<h2>New book</h2>
<%= form_with model: @book, url: book_index_path do |f| %>
 <p>title</p>
 <%= f.text_field :title %>
 
 <p>body</p>
 <%= f.text_area :body %>
 <div>
  <%= f.submit 'Create Book' %>
 </div>
<% end %>
 