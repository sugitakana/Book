<h2>User info</h2>
<%= image_tag @user.get_profile_image(100,100) %>
<table>
  <tr>
    <th>name</th>
    <th><%= @user.name %></th>
  </tr>
  <tr>
    <th>introduction</th>
    <th><%= @user.biography %></th>
  </tr>
</table>
<%= link_to "編集", edit_user_path(@user) %>

<h2>New book</h2>
<%= form_with model: @book, url: books_path do |f| %>
 <p>title</p>
 <%= f.text_field :title %>
 
 <p>body</p>
 <%= f.text_area :body %>
 <div>
  <%= f.submit 'Create Book' %>
 </div>
<% end %>

<h2>Books</h2>
<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
         <td><%= link_to user_path(book.user.id) do %>
          　    <%= image_tag book.user.get_profile_image(100,100) %>
             <% end %></td>
         <td><%= link_to book_path(book.id) do %>
               <%= book.title %>
           　<% end %></td>
         <td><%= book.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>